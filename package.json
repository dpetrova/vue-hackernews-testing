{
  "name": "vue-hackernews-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "npm run build && node scripts/serve",
    "build": "npm run build:server -- --silent && npm run build:client -- --no-clean --silent",
    "build:client": "vue-cli-service build",
    "build:server": "cross-env WEBPACK_TARGET=node vue-cli-service build",
    "start": "cross-env NODE_ENV=production node scripts/start",
    "lint": "vue-cli-service lint",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "test:unit": "jest src --no-cache",
    "test:unit:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test:integration": "npm run build && jest --testEnvironment node --forceExit server.spec.js"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "core-js": "^3.6.5",
    "firebase": "^7.17.1",
    "vue": "^2.6.11",
    "vue-axios": "^2.1.5",
    "vue-router": "^3.3.4",
    "vuex": "^3.5.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.4.0",
    "@vue/cli-plugin-eslint": "^4.4.0",
    "@vue/cli-service": "^4.4.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/server-test-utils": "^1.0.3",
    "@vue/test-utils": "^1.0.3",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "flush-promises": "^1.0.2",
    "jest": "^26.1.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "lodash.mergewith": "^4.6.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "vue-jest": "^3.0.6",
    "vue-server-renderer": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "webpack-node-externals": "^2.5.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.vue$": "vue-jest"
    },
    "setupFiles": [
      "./test-setup.js"
    ]
  }
}
